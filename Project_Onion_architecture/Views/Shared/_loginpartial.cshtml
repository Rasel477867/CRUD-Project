@{
}
@if(User.Identity.IsAuthenticated)
{
    <div>
        welcome  
        <br />
        @User.Identity.Name  
        <a asp-action="Logout" asp-controller="Contact" class="text-danger fw-bolder">Logout</a>
    </div>
}
else
{
    <div>
        <a asp-action="Register" asp-controller="Contact" class="btn btn-info">
            Register
        </a>
        <a asp-action="Login" asp-controller="Contact" class="btn btn-outline-secondary"> 
            Login
        </a>
    </div>
}
